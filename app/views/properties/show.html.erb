<div id="wrapper">
	<section>
		<div class="title">
			<h1><%= @property.title %></h1>
		</div>
    <div id='ninja-slider'>
        <div>
            <div class="slider-inner">
                <ul>
                  <%= @galleries.each do | gallery| %>
                    <li><%= image_tag(gallery.image, class:"ns-img") %></li>
                  <% end %>
                </ul>
                <div class="fs-icon" title="Expand/Close"></div>
            </div>
            <div id="thumbnail-slider">
                <div class="inner">
                    <ul>
                        <%= @galleries.each do |gallery| %>
                        <li>
                        	<%= image_tag(gallery.image, class:"thumb") %>
                            <span><%= gallery.description %></span>
                        </li>
                        <% end %>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div id="property_info">
      <h2>Description</h2>
    	<hr/>
    	<p>
        <%= @property.description %>
    	</p>
    	<h2>Spec</h2>
    	<hr/>
    	<p>
        <%= @property.spec %> sqm
    	</p>
    	<h2>Beds</h2>
    	<hr/>
    	<p>
    		<%= @property.beds %> beds
    	</p>
      <h2>Bathrrooms</h2>
      <hr/>
      <p>
        <%= @property.baths %> rooms
      </p>
    	<h2>Price</h2>
    	<hr/>
    	<p>
    		<%= number_to_currency(@property.price) %>
    	</p>
      <h2>City/Province</h2>
      <hr/>
      <p>
        <%= @property.state %>
      </p>
      <h2>Sang Kat/District</h2>
      <hr/>
      <p>
        <%= @property.district %>
      </p>
    	<h2>Address</h2>
      <hr/>
      <p>
        <%= @property.address %>
      </p>
      <h2>Map</h2>
      <hr/>
    	<div class="maps">
          <div id="map"></div>
    	</div>
        <h2>Contact person </h2>
        <hr/>
    	<div class="contact">
    		<ul>
          <li><b>Name:&nbsp;</b><%= @property.publisher.name %></li>
          <li><b>Phone:&nbsp;</b><%= @property.publisher.phone %></li>
          <li><b>Email:&nbsp;</b><%= @property.publisher.email %></li>
          <li><b>Role:&nbsp;</b><%= @property.publisher.role %></li>
        </ul>
    	</div>
    </div>
	</section>
	<aside>
		
	</aside>
</div>
<script type="text/javascript">
  var map;
  function initMap() {
    map = new google.maps.Map(document.getElementById('map'), {
      center: {lat: -34.397, lng: 150.644},
      zoom: 8
    });
  }
</script>
<script async defer
  src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCkGrrlqIJYcZmwGRxC44-_4_inLrn59ro&callback=initMap">
</script>
